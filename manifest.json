{
  "manifest_version": 3,
  "name": "Scroll and Click Extension",
  "version": "1.0",
  "description": "A Chrome extension to scroll the webpage and click on 'See More' links",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}